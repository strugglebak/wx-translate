<!-- history.wxml -->
<view class='container'>
  <text class='history-title {{state}}'>翻译历史</text>

  <scroll-view scroll-y class='history-result-list'>
    <view class='history-result'
      wx:for='{{history}}'
      wx:for-item='historyItem'
      wx:key='index'
    >
      <view class='orign-text'>{{historyItem.src}}</view>
      <view class='tanslate-text'>{{historyItem.dst}}</view>
    </view> 
  </scroll-view>

</view>